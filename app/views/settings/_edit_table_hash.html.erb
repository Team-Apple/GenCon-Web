<%= form_tag('/settings/trash_rotation', method: :patch, authenticity_token: true, class: "#{key}") do |f| %>
  <table class="materialized centered responsive-table">
    <thead>
      <tr>
        <% hash.each_key do |key| %>
          <th>
            <div class="chip">
              <%= Setting.languaged_days[key] %>
            </div>
          </th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% hash.each_with_index do |val, day| %>
          <td class="input-field">
            <%= text_field_tag "value[#{day}]", val[1], required: true %>
          </td>
        <% end %>
      </tr>
    </tbody>
  </table>
<% end %>