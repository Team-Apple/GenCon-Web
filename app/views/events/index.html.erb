<% provide :title, "All Events" %>
<% provide :events_is_active, "active" %>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <span class="card-title activator">イベント<i class="material-icons right">settings</i></span>
      </div>

      <div class="card-stacked">
        <div class="card-content">
          <% unless @events.empty? %>
            <ul class="collection">
              <% @events.each do |ev| %>
                <%= render 'events/column', event: ev %>
              <% end %>
            </ul>
          <% end %>
        </div>

        <div class="card-action">
          <%= link_to new_event_path, remote: true, class: 'btn waves-effect waves-light' do %>
            NEW
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
