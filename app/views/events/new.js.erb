$('#form').html("<%= j( render( 'form', event: Event.new ) ) %>");
$('#form').modal();
$('.datepicker').pickadate({
  selectMonths: true, // Creates a dropdown to control month
  selectYears: 8,
  format: 'yyyy-mm-dd',
  today: 'Today',
  clear: 'Clear',
  close: 'Ok',
  closeOnSelect: false // Close upon selecting a date
});
$('.timepicker').pickatime({
  default: 'now',
  format: 'HH:ii',
  formatSubmit: 'HH:ii',
  twelvehour: false,
  donetext: 'OK',
  cleartext: 'Clear',
  canceltext: 'Cancel',
  autoclose: false,
  ampmclickable: true
});
$('#form').modal('open');
$('select').material_select();
modalW = $('.modal').width();
$('.datetime_select .select-wrapper').css({
  'display': 'inline-block',
  'width': (modalW / 10) + 'px'
});
