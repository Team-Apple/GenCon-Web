<% provide :title, "All Tasks" %>
<% provide :tasks_is_active, "active" %>

<div class="row">
  <div class="col s12">
    <div class="card">
      <div class="card-content">
        <% unless @tasks.empty? %>
          <ul class="collection">
            <% @tasks.each do |ts| %>
              <%= render 'tasks/column', task: ts %>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>

    <div class="fixed-action-btn">
      <%= link_to new_task_path, remote: true, class: "btn-floating btn-large red" do %>
        <i class="material-icons">add</i>
      <% end %>
    </div>
  </div>
</div>
